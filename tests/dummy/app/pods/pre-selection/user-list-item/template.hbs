  <div class="block start frost-flex-1">
      <div class="row">
          <div class='select-checkbox'>
            {{frost-list-selection-indicator isSelected=isSelected}}
          </div>
          <div class='icon'>
              <div class='alarm frost-alarm-background-{{record.severityClass}}'>
                  <div class='text'>
                    {{record.severityAlias}}
                  </div>
              </div>
          </div>
          <div class="block column">
              <div class='secondary'>
                {{record.node-name}}
              </div>
              <div class='primary'>
                {{record.native-condition-type}}
              </div>
          </div>
      </div>
  </div>
  <div class='block frost-flex-1'>
      <div class='tertiary'>
          Primary id: {{record.id}}
        {{record.firstName}}{{record.lastName}}

          label: {{record.label}}
      </div>
  </div>
  <div class='block frost-flex-1'>
      <div class='tertiary'>
          <span class='label'>Info:</span> {{record.additional-text}}
      </div>
  </div>
  <div class='block end frost-flex-1'>
      <div class='secondary badge'>
        {{record.number-of-occurrences}}
      </div>
      <div class='secondary'>
          <span class='label'>Last raised:</span> <b>{{record.last-raise-time}}</b>
      </div>
    {{#if (eq detailLevel 'large')}}
        <div class='secondary'>
            <span class='label'>First raised:</span> <b>{{record.first-raise-time}}</b>
        </div>
        <div class='tertiary'>
          {{record.acknowledgeState}}
        </div>
    {{/if}}
  </div>
