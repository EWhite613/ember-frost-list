  class='demo'
  hook='demo'
  item=(component 'list-item')
  itemExpansion=(component 'list-item-expansion')
  items=items
  expandedItems=expandedItems
  selectedItems=selectedItems
  onExpansionChange=(action 'onExpansionChange')
