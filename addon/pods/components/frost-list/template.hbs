<div class='border-top'></div>
<div class='container'>
  {{#vertical-collection
  content=mappedRecords
  scrollPosition=scrollPosition
  defaultHeight=defaultHeight
  alwaysUseDefaultHeight=alwaysUseDefaultHeight
  key=key
  idForFirstItem=idForFirstItem
  firstReached=loadPrevious
  lastReached=loadNext
  as |record index|
  }}
  {{#if hasBlock}}
    {{yield record index}}
  {{else}}
    {{component item model=record index=index firstBody=firstBody secondBody=secondBody thirdBody=thirdBody}}
  {{/if}}
  {{/vertical-collection}}
</div>
<div class='border-bottom'></div>