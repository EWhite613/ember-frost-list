{{yield}}

{{#yield-slot 'header' (block-params (hash
  sort=(component 'frost-sort')

))}}
    {{yield}}
{{/yield-slot}}

{{frost-list-toggle showDetail=showDetail onClick=(action (mut showDetail) value="target.value")}}

<div class='border-top'></div>
<div class='container'>
  {{#vertical-collection
  content=mappedRecords
  scrollPosition=scrollPosition
  defaultHeight=defaultHeight
  alwaysUseDefaultHeight=alwaysUseDefaultHeight
  key=key
  idForFirstItem=idForFirstItem
  firstReached=loadPrevious
  lastReached=loadNext
  as |item index|
  }}
    {{component recordComponent model=item detailLevel=activeDetailLevel}}
  {{/vertical-collection}}
</div>
<div class='border-bottom'></div>
